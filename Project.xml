<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.software/project/1.0.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lime.software/project/1.0.2 http://lime.software/xsd/project-1.0.2.xsd">

	<app title="Rap-It-Up" file="RapItUp" main="Main" version="0.0.1" company="AARECo"/>
	<!-- Removed the "placeholder title" part of the title as I'm considering it being the "final" title as I can't think of a better title. -->

	<app preloader="flixel.system.FlxPreloader"/>

	<!-- <set name="SWF_VERSION" value="11.8"/> -->

	<window width="1280" height="720" background="#000000" hardware="true"/>
	<window if="html5" resizable="false"/>
	<window if="desktop" orientation="landscape"/>
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0"/>

	<section if="32bit">
		<set name="BUILD_DIR" value="export/debug/32bit" if="debug"/>
		<set name="BUILD_DIR" value="export/release/32bit" if="release"/>
		<set name="BUILD_DIR" value="export/final/32bit" if="final"/>
	</section>
	<section unless="32bit">
		<set name="BUILD_DIR" value="export/debug/64bit" if="debug"/>
		<set name="BUILD_DIR" value="export/release/64bit" if="release"/>
		<set name="BUILD_DIR" value="export/final/64bit" if="final"/>
	</section>

	<source path="source"/>

	<assets path="assets"/>

	<haxelib name="flixel"/>
	<!-- <haxelib name="flixel-addons"/> -->
	
	<haxedef name="FLX_NO_MOUSE" if="mobile" />
	<haxedef name="FLX_NO_KEYBOARD" if="mobile" />
	<haxedef name="FLX_NO_TOUCH" if="desktop" />

	<haxedef name="FLX_NO_DEBUG" unless="debug"/>
	<!-- <haxedef name="NAPE_RELEASE_BUILD" unless="debug"/> -->

	<icon path="assets/images/Placeholder/Icon.png"/>

</project>
